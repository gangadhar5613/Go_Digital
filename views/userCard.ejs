<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>User Card</title>
        <link rel="stylesheet" href="/stylesheets/main.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    </head>
    <body>


        <section class="card-section">
            <div class="user-card">
                <div class="user-image-name">
                   <div class="user-image">
                    <img class="user-card-img" src="/images/user.png" alt="user image">
                   </div>
                   <div class="user-name">
                     <h3 class="user-first-name"><%=card.name %></h3>
                     </div>
                </div>
                <div class="user-contacts">
                    <div class="user-mobile">
                        <i class="fas fa-mobile"></i>
                        <h3><%= card.number %></h3>
                     </div>
                    <div class="user-email">
                        <i class="fas fa-envelope"></i>
                     </div>
                </div>
                <div class="user-profession-box">
                    <h2 class="user-profession">Student</h2>
                </div>
                <div class="user-address-box">
                    <i class="fas fa-address-card"></i>
                    <address class="user-address"><%= card.address%></address>
                </div>
                <div class="user-social-media-links">
                    <div class="user-facebook-link">
                        <a class="user-facebook" href="#"><i class="fab fa-facebook"></i></a>
                    </div>
                    <div class="user-twitter-link">
                        <a class="user-twitter" href="#"><i class="fab fa-twitter"></i></a>
                    </div>
                    <div class="user-linkedIn-link">
                        <a class="user-linkedin" href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                    <div class="user-instagram-link">
                   <a class="user-instagram" href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </section>
    
    </body>
</html>